<section>
   <div class="container mt-3">
      <div class="row">
         <div class="col-md-12">
            <a href="/admin/add-category" class="btn btn-success float-right">Add Category</a>
            <table class="table mt-2">
            <thead>
            <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>
            </tr>
            </thead>
            <tbody>
            {{#each products}}
            <tr>
            <th scope="row">1</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.price}}</td>
            <td>{{this.description}}</td>
            <td><img style="width:50px; height:50px;" src="/product-images/{{this._id}}.jpg" alt="{{this.name}}"></td>
            <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
            </td>
            </tr>
            {{/each}}
            </tbody>
            </table>
         </div>
      </div>
   </div>
</section>