<section>
   <div class="container mt-5">
      <div class="row">
         {{#each products}}
         <div class="col-md-3 p-3">
            <div class="card" style="width: 15rem; height: 24rem;">
               <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" style="height: 12rem;">
               <div class="card-body">
                  <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text">Rs.{{this.price}}</p>
                  <p class="card-text">{{this.description}}</p>
                  <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to Cart</button>
               </div>
            </div>
         </div>
         {{/each}}
      </div>
   </div>
</section>